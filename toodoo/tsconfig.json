  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ESNext"],
    "types": ["node", "chrome", "vite/client"]
  },
  "include": ["src", "global.d.ts"]
}
